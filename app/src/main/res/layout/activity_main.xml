<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundc"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <Spinner
        android:id="@+id/spChartSelection"
        android:layout_width="215dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorAccent"
        android:popupBackground="@color/backgroundmenu"
        android:splitMotionEvents="false"
        android:text="Hello World!"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/swEnableLegend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spChartArgument"
        android:layout_width="215dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorAccent"
        android:popupBackground="@color/backgroundmenu"
        android:text="Hello World!"
        android:textColor="@color/text1"
        app:layout_constraintBottom_toTopOf="@+id/spChartSelection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/genera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbHole" />

    <Switch
        android:id="@+id/swEnableLegend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/legenda"
        android:textColor="@color/text1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445" />

    <SeekBar
        android:id="@+id/sbHole"
        android:layout_width="191dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="183dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:text="@string/cerchio_della_torta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swEnableLegend" />

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="37dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:text="@string/_0"
        app:layout_constraintBottom_toBottomOf="@+id/sbHole"
        app:layout_constraintStart_toEndOf="@+id/sbHole"
        app:layout_constraintTop_toTopOf="@+id/sbHole" />

</androidx.constraintlayout.widget.ConstraintLayout>